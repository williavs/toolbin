#!/bin/bash

# uni - Display a wall of unicode symbols with gum styling
# Programmatically generates unicode characters from various ranges

# Default color (212 = pink/magenta)
COLOR=${1:-212}

# Generate unicode characters from interesting ranges
# Using Python for proper unicode handling
python3 << 'PYEOF' | gum style --foreground "$COLOR" --bold
import sys

# Unicode ranges for various symbol sets
ranges = [
    (0x2500, 0x257F),  # Box Drawing
    (0x2580, 0x259F),  # Block Elements
    (0x25A0, 0x25FF),  # Geometric Shapes (â– â–¡â–²â–³â—‹â—â˜…â˜†)
    (0x2600, 0x26FF),  # Miscellaneous Symbols (â˜€â˜â˜‚â˜ â˜¢â˜£âš¡â™€â™‚â™ â™£â™¥â™¦â™ªâ™«âš€-âš…)
    (0x2700, 0x27BF),  # Dingbats (âœ€âœ‚âœˆâœ“âœ—âœ âœ¡âœ¨âœ©âœªâœ«)
    (0x2900, 0x297F),  # Supplemental Arrows-B
    (0x2B00, 0x2BFF),  # Miscellaneous Symbols and Arrows
    (0x1F300, 0x1F5FF), # Miscellaneous Symbols and Pictographs (ðŸŒ€-ðŸ—¿)
    (0x1F600, 0x1F64F), # Emoticons (ðŸ˜€-ðŸ™)
    (0x1F680, 0x1F6FF), # Transport and Map Symbols (ðŸš€-ðŸ›¿)
]

# Generate characters
chars = []
for start, end in ranges:
    for code in range(start, end):  # Generate all chars in range
        try:
            char = chr(code)
            # Filter out control chars and invalid unicode
            if char.isprintable():
                chars.append(char)
        except:
            pass

# Print with spaces
print(' '.join(chars))
PYEOF
